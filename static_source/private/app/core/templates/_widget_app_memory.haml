.widget-header
  %i.fa.fa-dot-circle-o.status-icon
  .title
    %strong(translate="widget.name.{{widget.name}}")
  .widget-header-btns
    %a(title="settings" ng-click="openSettings(widget)" href="#" )
      %i.fa.fa-cog
    %a(title="remove widget" ng-click="removeWidget(widget)" href="#" )
      %i.fa.fa-trash
  .clearfix

  .widget-container

    .widget-content
      .counter
        {{alloc | readableBytes}}

  %ul.widget-footer
    %li
      .label {{'widget.app_memory.heap_alloc' | translate}}
      .counter {{heap_alloc | readableBytes}}
    %li
      .label {{'widget.app_memory.total_alloc' | translate}}
      .counter {{total_alloc | readableBytes}}
    %li
      .label {{'widget.app_memory.sys' | translate}}
      .counter {{sys | readableBytes}}



