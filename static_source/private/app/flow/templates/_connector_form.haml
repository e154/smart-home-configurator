.row
  .col-md-12
    .form-group
      %label {{'flow.element.title' | translate}}
      %input.form-control(ng-model="selectedConn.title" ng-change="setLabel()" )

    .form-group
      %label {{'flow.element.direction' | translate}}
      %select.form-control(ng-model="selectedConn.direction" ng-options="direction.value as direction.name for direction in directions" ng-change="setDirection()")