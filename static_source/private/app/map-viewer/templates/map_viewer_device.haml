%span.device-menu(ng-mouseleave="mouseLive()" ng-mouseover="mouseOver()")

  .device-menu-circle(ng-class="{'show' : show_menu}" )
    %a(ng-repeat="action in element.prototype.actions" ng-click="doAction(action, $event)" ng-if="action.image" )
      %img.unselectable(ng-src="{{action.image.url}}")

  .device-menu-wrapper
    .device-menu-wrapper__text
      .device-menu-wrapper__text__state( ng-if="options.show_state_text" )
        {{current_status.status.description}}

      .device-menu-wrapper__text__options( ng-if="options.show_options_text" )
        {{current_status.options.text}}

    %a.device-menu-button(ng-click="showMenu()")
      %img.unselectable( ng-src="{{element.prototype.current_state.image.url || element.prototype.image.url}}" ng-style="{{element.prototype.current_state.style ||element.prototype.style}}")