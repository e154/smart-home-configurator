.row
  .col-md-12
    %h3
      %a(href="" ui-sref="dashboard.mqtt.zigbee2mqtt")
        %small.fa.fa-long-arrow-left
          &nbsp;
      {{'zigbee2mqtt.show' | translate}} â„–{{br.model.id}}
      .edit-icon-link(if-can="{zigbee2mqtt:['update']}")
        %a(ui-sref="dashboard.mqtt.zigbee2mqtt_edit({id:br.model.id})")
          %span.fa.fa-pencil

    .pull-right.date-info-block
      .form-group
        %small
          {{'Created at' | translate}} {{br.model.created_at | readableDateTime}}
        %small
          {{'Updated at' | translate}} {{br.model.updated_at | readableDateTime}}

.row
  .col-md-2
    .form-group
      .text-muted
        {{'zigbee2mqtt.status' | translate}}
      %div(ng-if="br.status == 'online'")
        %span.label.label-success
          {{"zigbee2mqtt.online" | translate}}

      %div(ng-if="br.status != 'online'")
        %span.label.label-default
          {{"zigbee2mqtt.offline" | translate}}

    .form-group
      .text-muted
        {{'zigbee2mqtt.base_topic' | translate}}
      %div
        {{::br.model.base_topic}}

    .form-group(ng-if="br.model.name")
      .text-muted
        {{'zigbee2mqtt.name' | translate}}
      %div
        {{::br.model.name}}

    .form-group(ng-if="br.description")
      .text-muted
        {{'zigbee2mqtt.description' | translate}}
      %div
        {{::br.description}}

    .form-group(ng-if="br.model.login")
      .text-muted
        {{'zigbee2mqtt.login' | translate}}
      %div
        {{::br.model.login}}

  .col-md-6
    .row
      .col-md-12
        %h4
          {{'zigbee2mqtt.devices' | translate}}

    .row(ng-repeat="device in br.model.devices")

      .col-md-8.zigbee2mqtt-device-card

        %dl
          %dt {{'zigbee2mqtt.device.id' | translate}}
          %dd {{::device.id}}

          %dt {{'zigbee2mqtt.device.name' | translate}}
          %dd {{::device.name}}

          %dt {{'zigbee2mqtt.device.model' | translate}}
          %dd {{::device.model}}

          %dt {{'zigbee2mqtt.device.description' | translate}}
          %dd {{::device.description}}

          %dt {{'zigbee2mqtt.device.manufacturer' | translate}}
          %dd {{::device.manufacturer}}

          %dt {{'zigbee2mqtt.device.functions' | translate}}
          %dd
            %span(ng-repeat="item in device.functions")
              {{item}}&nbsp;
        %br
        %br

      .col-md-4.zigbee2mqtt-device-image
        %span.label.label-success(ng-if="device.status == 'active'")
          {{::device.status}}
        %span.label.label-default(ng-if="device.status != 'active'")
          {{::device.status}}
        %img(ng-src="{{device.image_url}}" err-src="/static/images/placeholder_file_not_found.svg")
