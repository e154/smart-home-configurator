.row
  .col-md-6
    %h3
      %a(href="" ui-sref="dashboard.scenario.show({id: scenario.id})")
        %small.fa.fa-long-arrow-left
          &nbsp;
      {{'scenario.edit_form' | translate}} "{{scenario.name}}"

.row
  .col-md-6
    %div(ng-include="'/scenario/templates/_scenario_form.html'")

.row
  .col-md-6
    .pull-right
      %a.btn.btn-danger(href="" role="button" ng-click="remove()")
        {{'Delete' | translate}}
      %a.btn.btn-default(href="" role="button" ui-sref="dashboard.scenario.index")
        {{'Close' | translate}}
      %a.btn.btn-primary(href="" role="button" ng-click="submit()")
        {{'Update' | translate}}