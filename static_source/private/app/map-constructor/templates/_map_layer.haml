.panel.panel-default
  .panel-heading
    {{'map.current_layer' | translate}}
  .panel-body

    .row
      .col-md-12
        .form-group
          %label {{'map.layer.name' | translate}}*
          %input.form-control(ng-model="current_layer.name")
      .col-md-12
        .form-group
          %label {{'map.layer.status' | translate}}
          %select.form-control(ng-model="current_layer.status")
            %option(value="enabled")
              {{'map.layer.enabled' | translate}}
            %option(value="disabled")
              {{'map.layer.disabled' | translate}}
            %option(value="frozen")
              {{'map.element.frozen' | translate}}

    .form-group
      %label {{'map.layer.description' | translate}}
      %textarea.form-control(ng-model="current_layer.description" rows="2" )

    .form-group
      %a.btn.btn-default(href="" role="button" ng-click="removeLayer(current_layer)" if-can="{map:['delete_map_layer']}")
        {{'Delete' | translate}}
      %a.btn.btn-default(href="" role="button" ng-click="updateLayer(current_layer)" if-can="{map:['update_map_layer']}")
        {{'Update' | translate}}