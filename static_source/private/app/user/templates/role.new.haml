.row
  .col-md-12
    %h3
      %a(href="" ui-sref="dashboard.role.index")
        %small.fa.fa-long-arrow-left
          &nbsp;
      {{'role.new_form' | translate}}

.row
  .col-md-12
    .alert.alert-success(role="alert")
      %h4.alert-heading
        %span.fa.fa-lightbulb-o &nbsp;
        {{'role.help2.title' | translate}}
      %p
        {{'role.help2.message1' | translate}}

.row
  .col-md-6
    %div(ng-include="'/user/templates/_role_form.html'")

.row
  .col-md-6
    .pull-right
      %a.btn.btn-default(href="" role="button" ui-sref="dashboard.role.index" if-can="{user:['create_role']}")
        {{'Cancel' | translate}}
      %a.btn.btn-primary(href="" role="button" ng-click="create()" if-can="{user:['create_role']}")
        {{'Create' | translate}}
