.row
  .col-md-12
    %h3
      %a(href="" ui-sref="dashboard.role.index")
        %small.fa.fa-long-arrow-left
          &nbsp;
      {{'role.show_form' | translate}} - {{role.name}}
      .edit-icon-link(if-can="{user:['update_role']}")
        %a(ui-sref="dashboard.role.edit({name:role.name})")
          %span.fa.fa-pencil
        &nbsp;
        %a(href="" ui-sref="dashboard.permissions.show({name: role.name})")
          %small.fa.fa-key

.row
  .col-md-12
    .alert.alert-success(role="alert")
      %h4.alert-heading
        %span.fa.fa-lightbulb-o &nbsp;
        {{'role.help2.title' | translate}}
      %p
        {{'role.help2.message1' | translate}}

.row
  .col-md-12
    .pull-right.date-info-block
      .form-group
        %small
          {{'Created at' | translate}} {{role.created_at | readableDateTime}}
        %small
          {{'Updated at' | translate}} {{role.updated_at | readableDateTime}}

.row
  .col-md-2
    .form-group
      .text-muted {{'role.name' | translate}}
      %div {{::role.name}}
    .form-group(ng-if="role.description != ''")
      .text-muted {{'role.description' | translate}}
      %div {{::role.description}}
    .form-group(ng-if="role.parent")
      .text-muted {{'role.parent' | translate}}
      %a(ui-sref="dashboard.role.show({name: role.parent.name})" )
        {{role.parent.name}}
    .form-group(ng-if="role.children.length")
      .text-muted {{'role.children' | translate}}
      %div(ng-repeat="child in role.children")
        %a(ui-sref="dashboard.role.show({name: child.name})" )
          {{child.name}}
