.row
  .col-md-12
    %h3 {{'role.index_form' | translate}}

.row
  .col-md-12
    .alert.alert-success(role="alert")
      %h4.alert-heading
        %span.fa.fa-lightbulb-o &nbsp;
        {{'role.help1.title' | translate}}
      %p
        {{'role.help1.message1' | translate}}

.row(if-can="{user:['create_role']}")
  .col-md-12
    .form-group
      %a(ui-sref="dashboard.role.new" )
        .fa.fa-plus
        &nbsp;
        {{'role.add_new' | translate}}

.row(if-can="{user:['read_role']}")
  .col-md-12
    .table.users(table="options")
