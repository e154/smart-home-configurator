.row
  .col-md-12
    %h3
      %a(href="" ui-sref="dashboard.workflow.index")
        %small.fa.fa-long-arrow-left
          &nbsp;
      {{'workflow.show_form' | translate}} "{{workflow.workflow.name}}"
      .edit-icon-link
        %a(ui-sref="dashboard.workflow.edit({id:workflow.workflow.id})")
          %span.fa.fa-pencil

    .pull-right.date-info-block
      .form-group
        %small
          {{'Created at' | translate}} {{workflow.workflow.created_at | readableDateTime}}
        %small
          {{'Updated at' | translate}} {{workflow.workflow.update_at | readableDateTime}}

.row
  .col-md-2
    .form-group
      .text-muted
        {{'workflow.status' | translate}}

      %span.label.label-success(ng-if="workflow.workflow.status == 'enabled'")
        {{"workflow.enabled" | translate}}
      %span.label.label-default(ng-if="workflow.workflow.status == 'disabled'")
        {{"workflow.disabled" | translate}}

    .form-group
      .text-muted
        {{'workflow.name' | translate}}
      %div
        {{::workflow.workflow.name}}

    .form-group(ng-if="workflow.workflow.description")
      .text-muted
        {{'workflow.description' | translate}}
      %div
        {{::workflow.workflow.description}}

  .col-md-10
    .form-group
      %ul.nav.nav-tabs
        %li(role="presentation" ui-sref-active-eq="active" ui-sref="dashboard.workflow.show")
          %a(href="#")
            {{'workflow.scenarios' | translate}}
        %li(role="presentation" ui-sref-active-eq="active" ui-sref="dashboard.workflow.show.scripts")
          %a(href="#")
            {{'workflow.scripts' | translate}}


    %div(ui-view="tab-view")
