.form-group
    %label {{'workflow.name' | translate}}*
    %input.form-control(ng-model="workflow.workflow.name")

.form-group
    %label {{'workflow.status' | translate}}
    %select.form-control(ng-model="workflow.workflow.status")
        %option(value="enabled")
            {{'workflow.enabled' | translate}}
        %option(value="disabled")
            {{'workflow.disabled' | translate}}

.form-group
    %label {{'workflow.description' | translate}}
    %textarea.form-control(ng-model="workflow.workflow.description" rows="10" )

