.row
  .col-md-12
    %h3 {{'workflow.index_form' | translate}}

.row
  .col-md-12
    .alert.alert-success(role="alert")
      %h4.alert-heading
        %span.fa.fa-lightbulb-o &nbsp;
        {{'workflow.help1.title' | translate}}
      %p
        {{'workflow.help1.message1' | translate}}
      %p
        {{'workflow.help1.message2' | translate}}

.row(if-can="{workflow:['create']}")
  .col-md-12
    .form-group
      %a(ui-sref="dashboard.workflow.new")
        %i.fa.fa-plus
        &nbsp;
        {{'Add new' | translate}}

.row(if-can="{workflow:['read']}")
  .col-md-12
    .table(table="workflow.options")
