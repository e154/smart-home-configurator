.row
  .col-md-12
    %h3 {{'device.index_form' | translate}}

.row
  .col-md-12
    .alert.alert-success(role="alert")
      %h4.alert-heading
        %span.fa.fa-lightbulb-o &nbsp;
        {{'device.help1.title' | translate}}
      %p
        {{'device.help1.message1' | translate}}

.row(if-can="{device:['create']}")
  .col-md-12
    .form-group
      %a(ui-sref="dashboard.device.new")
        %i.fa.fa-plus
        &nbsp;
        {{'Add new' | translate}}

.row(if-can="{device:['read']}")
  .col-md-12
    .table(table="device.options")
