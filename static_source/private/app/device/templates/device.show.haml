.row
  .col-sm-12
    %h3
      %a(href="" ui-sref="dashboard.device.index")
        %small.fa.fa-long-arrow-left
          &nbsp;
      {{'device.show_form' | translate}} â„–{{device.id}}
      .edit-icon-link(if-can="{device:['update']}")
        %a(ui-sref="dashboard.device.edit({id:device.id})")
          %span.fa.fa-pencil

    .pull-right.date-info-block
      .form-group
        %small
          {{'Created at' | translate}} {{device.created_at | readableDateTime}}
        %small
          {{'Updated at' | translate}} {{device.updated_at | readableDateTime}}

.row
  .col-sm-2
    .form-group
      .text-muted
        {{'device.name' | translate}}
      %div
        {{::device.name}}

    .form-group
      .text-muted
        {{'device.status.name' | translate}}
      %span.label.label-success(ng-if="device.status == 'enabled'")
        {{"device.enabled" | translate}}
      %span.label.label-default(ng-if="device.status == 'disabled'")
        {{"device.disabled" | translate}}

    .form-group(ng-if="device.address")
      .text-muted
        {{'device.address' | translate}}
      %div
        {{::device.address}}

    .form-group(ng-if="device.baud")
      .text-muted
        {{'device.baud' | translate}}
      %div
        {{::device.baud}}

    .form-group(ng-if="device.stop_bite")
      .text-muted
        {{'device.stop_bite' | translate}}
      %div
        {{::device.stop_bite}}

    .form-group(ng-if="device.timeout")
      .text-muted
        {{'device.timeout' | translate}}
      %div
        {{::device.timeout}}

    .form-group(ng-if="device.tty")
      .text-muted
        {{'device.tty' | translate}}
      %div
        {{::device.tty}}

    .form-group(ng-if="device.description")
      .text-muted
        {{'device.description' | translate}}
      %div
        {{::device.description}}

  .col-sm-10
    .form-group
      %ul.nav.nav-tabs
        %li(role="presentation" ui-sref-active-eq="active" ui-sref="dashboard.device.show")
          %a(href="#")
            {{'device.actions' | translate}}
        %li(role="presentation" ui-sref-active-eq="active" ui-sref="dashboard.device.show.statuses")
          %a(href="#")
            {{'device.statuses' | translate}}


    %div(ui-view="tab-view")
