.row
  .col-md-6
    %h3 {{'device.edit_form' | translate}}

.row
  .col-md-12
    %div(ng-include="'/device/templates/_device_form.html'")
.row
  .col-md-6
    .pull-right
      %a.btn.btn-danger(href="" role="button" ng-click="device.remove()" if-can="{device:['delete']}")
        {{'Delete' | translate}}
      %a.btn.btn-default(href="" role="button" ui-sref="dashboard.device.index")
        {{'Cancel' | translate}}
      %a.btn.btn-primary(href="" role="button" ng-click="device.submit()" if-can="{device:['update']}")
        {{'Update' | translate}}